<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.maruridigital.millertime"
        versionCode="10" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>Panic Button</name>

    <description>
        Panic Button.
    </description>

    <author href="https://build.phonegap.com" email="support@phonegap.com">
        Flare Workshop
    </author>

    <!--android-->

    <!--splash screen ANDROID-->
    <gap:splash src="img/splash/splash_320x480.png" />
    <gap:splash src="img/splash/splash_320x480.png" gap:platform="android" width="320" height="480" />
    <!--splash screen IOS-->
    <gap:splash src="img/splash/splash_320x480.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="img/splash/splash_640x960.png" gap:platform="ios" width="640" height="960" />
    <gap:splash src="img/splash/splash_640x1136.png" gap:platform="ios" width="640" height="1136" />
    <gap:splash src="img/splash/splash_768x1004.png" gap:platform="ios" width="768" height="1004" />


    <gap:splash src="img/ico/ldpi.png" gap:platform="android" gap:density="ldpi" />
    <gap:splash src="img/ico/mdpi.png" gap:platform="android" gap:density="mdpi" />
    <gap:splash src="img/ico/hdpi.png" gap:platform="android" gap:density="hdpi" />
    <gap:splash src="img/ico/xhdpi.png" gap:platform="android" gap:density="xhdpi" />


    <!--splash screen IPHONE-->
    <icon src="img/ico/ldpi.png" gap:platform="ios" width="57" height="57" />
    <icon src="img/ico/mdpi.png" gap:platform="ios" width="72" height="72" />
    <icon src="img/ico/hdpi.png" gap:platform="ios" width="114" height="114" />
    <icon src="img/ico/xhdpi.png" gap:platform="ios" width="144" height="144" /> 

    <preference name="phonegap-version" value="2.9.0" />
    <preference name="orienation" value="landscape" />
    <preference name="fullscreen" value="true" />

    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-maxSdkVersion" value="15" />
    <preference name="android-targetSdkVersion" value="12" />
    <preference name="android-installLocation" value="auto" />
    <preference name="splash-screen-duration" value="10000"/>

    
    <!--iphone-->

    <preference name="target-device" value="universal" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="true" />
    <gap:url-scheme name="com.maruridigital.millertime" role="None">
      <scheme>pgbr</scheme>
      <scheme>pgbw</scheme>
    </gap:url-scheme>

<!--
    <gap:plugin name="com.simplec.plugins.localnotification" />
    -->
    

</widget>